#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "sleep.h"
#include "xparameters.h"
#include "xtime_l.h"


#include "controller.h"

#include "utils.h"

int main()
{
    init_platform();

    print("Setting up axi_quad_spi\n\r");
	mic_setup();

	// Loop body
	while(read_sw7()){

		if(read_button_center()){
			read_mic();
		}

		if (read_button_right()){
			send_data();
		}
	}




    cleanup_platform();
    return 0;
}

